<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.sofiatourguide.MainActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/main_background_image"
        android:scaleType="centerCrop"
        android:src="@drawable/sofia_background" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tap_anywhere_to_start_the_tour"
        android:textColor="@color/themeTextColor"
        android:textSize="@dimen/sp20"
        android:textStyle="bold"
        android:background="@color/light_tint_color"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingBottom="@dimen/dp4"
        android:paddingTop="@dimen/dp4"/>

</RelativeLayout>
